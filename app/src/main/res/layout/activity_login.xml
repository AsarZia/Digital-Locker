<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7B49AC6"
    android:orientation="vertical"
    tools:context=".Login">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="15dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:src="@drawable/dlocker"
           android:layout_marginTop="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:textColorHint="#130A0A"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:errorEnabled="true">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:hint="E-mail (eg. you@example.com )"
            android:imeOptions="actionNext"
            android:textColor="#130A0A"
            android:inputType="text"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="193dp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            android:textColorHint="#130A0A">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password must have atleast 8 character"
            android:textColor="#130A0A"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button"
            android:text="Login"
            android:textColor="#130A0A"/>

        <TextView
            android:id="@+id/tv_ForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:textAlignment="center"
            android:text="Forgot password ?"
            android:textSize="15sp"
            android:textColor="#130A0A"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="405dp"
            android:text="Not yet on DigitalLocker ?"
            android:textSize="15sp"
            android:textColor="#130A0A"/>

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="405dp"
            android:text="Sign-Up now"
            android:textSize="15sp"
            android:textColor="#D7780FC0"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/help_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:text="Need Help ?"
        android:textSize="15sp"
        android:textColor="#130A0A"/>



</LinearLayout>